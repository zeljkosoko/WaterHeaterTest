@page
@model LoginModel

<div class="logovanje">
    <img src="~/img/zebracon_logo.png" alt="Zebracon_logo" />
    <form id="account" method="post">

        <input asp-for="Input.UserName" class="valid" placeholder="Korisničko ime.." autofocus />
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
        
        <input asp-for="Input.Password" class="valid" placeholder="Lozinka.." type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <button type="submit" class="loguj-se">Uloguj se</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
